{
  "name": "@clidey/dory",
  "private": false,
  "version": "0.34.0",
  "type": "module",
  "description": "A CLI tool for building and previewing documentation sites",
  "keywords": [
    "cli",
    "documentation",
    "build",
    "preview",
    "static-site"
  ],
  "bin": {
    "dory": "./bin/dist/dory.js"
  },
  "files": [
    "bin/dist",
    "src",
    "index.html",
    "vite.config.ts",
    "vite.config.embed-loader.ts",
    "vite.config.embed-widget.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/clidey/dory.git"
  },
  "author": "Clidey",
  "license": "MIT",
  "homepage": "https://github.com/clidey/dory",
  "bugs": {
    "url": "https://github.com/clidey/dory/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:cli && tsc -b && vite build",
    "build:cli": "tsc -p tsconfig.bin.json",
    "build:docs": "tsc -b && vite build",
    "build:embed": "npm run build:embed:loader && npm run build:embed:widget",
    "build:embed:loader": "vite build -c vite.config.embed-loader.ts",
    "build:embed:widget": "vite build -c vite.config.embed-widget.ts",
    "preview": "vite preview",
    "publish": "npm run build && npm publish --access public --no-git-checks",
    "prepublishOnly": "echo 'Skipping prepublishOnly - build handled by publish script'"
  },
  "dependencies": {
    "@algolia/autocomplete-core": "1.19.2",
    "@clidey/ux": "0.36.0",
    "@fortawesome/fontawesome-svg-core": "6.7.2",
    "@fortawesome/free-brands-svg-icons": "6.7.2",
    "@fortawesome/free-regular-svg-icons": "6.7.2",
    "@fortawesome/free-solid-svg-icons": "6.7.2",
    "@fortawesome/react-fontawesome": "0.2.2",
    "@headlessui/react": "2.2.9",
    "@heroicons/react": "2.2.0",
    "@mdx-js/mdx": "3.1.0",
    "@mdx-js/preact": "3.1.0",
    "@mdx-js/rollup": "3.1.0",
    "@preact/preset-vite": "2.10.1",
    "@tailwindcss/vite": "4.1.16",
    "@types/react-highlight-words": "0.20.0",
    "classnames": "2.5.1",
    "flexsearch": "0.8.205",
    "gray-matter": "4.0.3",
    "gzip-size-cli": "5.1.0",
    "katex": "0.16.22",
    "lucide-react": "0.513.0",
    "mermaid": "11.6.0",
    "motion": "12.16.0",
    "preact": "10.26.5",
    "prism-react-renderer": "2.4.1",
    "react-highlight-words": "0.21.0",
    "remark-gfm": "4.0.1",
    "saas": "1.0.0",
    "sass-embedded": "1.89.2",
    "sirv": "3.0.1",
    "tailwindcss": "4.1.16",
    "tsx": "4.20.4",
    "typescript": "~5.8.3",
    "unist-util-visit": "5.0.0",
    "vite": "6.3.5",
    "vite-plugin-mdx": "3.6.1",
    "wouter-preact": "3.7.1"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "devDependencies": {
    "@types/node": "24.0.12",
    "terser": "5.44.1"
  }
}
