{
  "name": "@clidey/dory",
  "private": false,
  "version": "0.45.0",
  "type": "module",
  "description": "A CLI tool for building and previewing documentation sites",
  "keywords": [
    "cli",
    "documentation",
    "build",
    "preview",
    "static-site"
  ],
  "bin": {
    "dory": "./bin/dist/dory.js"
  },
  "files": [
    "bin/dist",
    "src",
    "scripts",
    "index.html",
    "vite.config.ts",
    "vite.config.ssr.ts",
    "vite.config.embed-loader.ts",
    "vite.config.embed-widget.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/clidey/dory.git"
  },
  "author": "Clidey",
  "license": "MIT",
  "homepage": "https://github.com/clidey/dory",
  "bugs": {
    "url": "https://github.com/clidey/dory/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:cli && tsc -b && npm run build:docs",
    "build:cli": "tsc -p tsconfig.bin.json",
    "build:docs": "vite build && vite build --config vite.config.ssr.ts && node scripts/render-routes.mjs",
    "build:embed": "npm run build:embed:loader && npm run build:embed:widget",
    "build:embed:loader": "vite build -c vite.config.embed-loader.ts",
    "build:embed:widget": "vite build -c vite.config.embed-widget.ts",
    "preview": "vite preview",
    "publish": "npm run build && npm publish --access public --no-git-checks",
    "prepublishOnly": "echo 'Skipping prepublishOnly - build handled by publish script'"
  },
  "dependencies": {
    "@algolia/autocomplete-core": "1.19.5",
    "@clidey/ux": "0.39.0",
    "@fortawesome/fontawesome-svg-core": "7.2.0",
    "@fortawesome/free-brands-svg-icons": "7.2.0",
    "@fortawesome/free-regular-svg-icons": "7.2.0",
    "@fortawesome/free-solid-svg-icons": "7.2.0",
    "@fortawesome/react-fontawesome": "3.2.0",
    "@headlessui/react": "2.2.9",
    "@heroicons/react": "2.2.0",
    "@mdx-js/mdx": "3.1.1",
    "@mdx-js/preact": "3.1.1",
    "@mdx-js/rollup": "3.1.1",
    "@preact/preset-vite": "2.10.3",
    "@tailwindcss/vite": "4.1.18",
    "@types/react-highlight-words": "0.20.1",
    "classnames": "2.5.1",
    "flexsearch": "0.8.212",
    "gray-matter": "4.0.3",
    "gzip-size-cli": "5.1.0",
    "katex": "0.16.28",
    "lucide-react": "0.563.0",
    "mermaid": "11.12.2",
    "motion": "12.34.0",
    "preact": "10.28.3",
    "preact-render-to-string": "6.6.5",
    "prism-react-renderer": "2.4.1",
    "react-highlight-words": "0.21.0",
    "remark-gfm": "4.0.1",
    "saas": "1.0.0",
    "sass-embedded": "1.97.3",
    "sirv": "3.0.2",
    "tailwindcss": "4.1.18",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "unist-util-visit": "5.1.0",
    "vite": "7.3.1",
    "wouter-preact": "3.9.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "devDependencies": {
    "@types/node": "25.2.3",
    "terser": "5.46.0"
  }
}
