{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "./bin/dist",
    "rootDir": "./bin",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "bin/**/*.ts"
  ],
  "exclude": [
    "bin/dist"
  ]
}